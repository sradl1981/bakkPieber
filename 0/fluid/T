{
    inlet
    {
	type  		fixedValue;
	value		uniform 300;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform 300;
        value           uniform 300;
    }

    tubeWall
    {
        type            zeroGradient;
    }
 
    fluid_to_bedOfSpheres
    {
	 type  			fixedValue;
   	 value 			uniform 600;
	 /*type         	compressible::turbulentTemperatureCoupledBaffleMixed;
	 value          	1.0;
         neighbourFieldName 	T;
         kappa           	fluidThermo;
         kappaName       	none;*/
    }
