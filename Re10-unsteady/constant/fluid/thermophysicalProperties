FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      thermophysicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

thermoType
{
    type            heRhoThermo;
    mixture         pureMixture;
    transport       const;
    thermo          hConst;
    equationOfState rhoConst;
    specie          specie;
    energy          sensibleEnthalpy;
}

mixture
{
    specie
    {
        nMoles          1;
        molWeight       1;
    }
    thermodynamics
    {
        Cp              1000;	
        Hf              0.0;
    }
    transport
    {
        mu              0.1;		// value in order to achieve a Reynolds number of 10
        Pr             	0.70;		// value for air at 1000 Â°C and 10 bar
    }

    equationOfState
    {
        rho     	1;		
    }
}



