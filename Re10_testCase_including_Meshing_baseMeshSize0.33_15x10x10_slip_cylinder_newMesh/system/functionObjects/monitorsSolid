    averageSolidTemperature
    {
    
        type                  	cellSource;
        functionObjectLibs 	("libfieldFunctionObjects.so");
        outputControl   	timeStep;
        outputInterval   	2;
        log                   	yes;
        valueOutput          	false;
        source              	cellZone; 		
        sourceName     		solidSphere;
        region 			solidSphere;
        operation         	volAverage;
	
        fields
        (
            T
        );
    }
    
    volumeIntegratedSolidTemperature
    {
    
        type                  	cellSource;
        functionObjectLibs 	("libfieldFunctionObjects.so");
        outputControl   	timeStep;
        outputInterval  	2;
        log                   	yes;
        valueOutput           	false;
        source              	cellZone; 
        sourceName     		solidSphere; 
        region 			solidSphere;
  	operation         	volIntegrate;

        fields
        (
            T
        );
    }
    
    averageSurfaceTemperatureSolid
    {
    
        type                  	faceSource;
        functionObjectLibs 	("libfieldFunctionObjects.so");
        outputControl   	timeStep;
        outputInterval   	2;
        log                   	yes;
        valueOutput           	false;
        source              	patch; 			
        sourceName         	solidSphere_to_fluid; 	
        region 			solidSphere;
        operation         	areaAverage;
	
        fields
        (
            T
        );
    }

