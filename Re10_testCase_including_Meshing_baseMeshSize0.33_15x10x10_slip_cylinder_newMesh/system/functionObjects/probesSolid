    probesSolid
    {
        functionObjectLibs 	( "libsampling.so" );
        type            	probes;
        name            	probes;
        outputControl   	timeStep;
	outputInterval  	2;
	region			solidSphere;
	
        fields
        (
            T
        );
	
        probeLocations
        (
            ( 0.001 0.001  0.48 )    
            ( 0.001 0.001  0 )
	    ( 0.001 0.001 -0.48 )  
        );
    }

