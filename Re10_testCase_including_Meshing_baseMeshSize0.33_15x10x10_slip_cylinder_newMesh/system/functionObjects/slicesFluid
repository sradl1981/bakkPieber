    slicesFluid
    {
          type 			surfaces;
          functionObjectLibs 	("libsampling.so");
          interpolationScheme 	cell;
	  outputControl   	outputTime;
          surfaceFormat 	vtk;
	  region 		fluid;

          fields ( U p T );

          surfaces
          (
              xyPlane
              {
                  type 			cuttingPlane;
                  planeType 		pointAndNormal;
                  pointAndNormalDict
                  {
                      basePoint 	(0 0 0);
                      normalVector 	(0 0 1);
                  }
		  interpolate true;
              }
              
              xzPlane
              {
                  type 			cuttingPlane;
                  planeType 		pointAndNormal;
                  pointAndNormalDict
                  {
                      basePoint 	(0 0 0);
                      normalVector 	(0 1 0);
                  }
		  interpolate true;
              }
              
              yzPlane
              {
                  type 			cuttingPlane;
                  planeType 		pointAndNormal;
                  pointAndNormalDict
                  {
                      basePoint 	(0 0 0);
                      normalVector 	(1 0 0);
                  }
		  interpolate true;
              }
  	   );
        }

